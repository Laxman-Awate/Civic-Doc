<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work Order - CivicDoc</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; line-height: 1.6; color: #333; margin: 20px; background-color: #f8f8f8; }
        .container { max-width: 800px; margin: auto; background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
        h1 { color: #0056b3; text-align: center; margin-bottom: 25px; border-bottom: 2px solid #0056b3; padding-bottom: 10px; }
        h2 { color: #0056b3; margin-top: 25px; border-bottom: 1px solid #ccc; padding-bottom: 5px; }
        p { margin-bottom: 10px; }
        .detail-item { margin-bottom: 8px; }
        .label { font-weight: bold; color: #555; }
        .ai-insight { background-color: #e0f7fa; border-left: 5px solid #00bcd4; padding: 15px; margin-top: 20px; border-radius: 8px; }
        .ai-insight p { margin: 5px 0; }
        ul { list-style-type: disc; margin-left: 20px; padding-left: 0; }
        ul li { margin-bottom: 5px; }
        .status { font-weight: bold; color: #28a745; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Work Order: {{ issue_id }}</h1>
        
        <p class="detail-item"><span class="label">Generated At:</span> {{ generated_at.strftime('%Y-%m-%d %H:%M:%S') }}</p>
        
        <h2>Complaint Details</h2>
        <p class="detail-item"><span class="label">Task Description:</span> {{ task_description }}</p>
        <p class="detail-item"><span class="label">Assigned Department:</span> {{ assigned_department }}</p>

        {% if category %}
        <div class="ai-insight">
            <h2>AI-Powered Insights</h2>
            <p class="detail-item"><span class="label">Category:</span> {{ category }}</p>
            <p class="detail-item"><span class="label">Urgency Score:</span> <span style="color: {% if urgency_score >= 80 %}red{% elif urgency_score >= 50 %}orange{% else %}green{% endif %}">{{ urgency_score }}</span> / 100</p>
            {% if estimated_cost %}<p class="detail-item"><span class="label">Estimated Cost:</span> â‚¹{{ "{:,.2f}".format(estimated_cost) }}</p>{% endif %}
            {% if required_resources %}
            <p class="detail-item"><span class="label">Required Resources:</span></p>
            <ul>
                {% for resource in required_resources.split(', ') %}
                <li>{{ resource }}</li>
                {% endfor %}
            </ul>
            {% endif %}
            {% if suggested_actions %}
            <p class="detail-item"><span class="label">Suggested Actions:</span></p>
            <ul>
                {% for action in suggested_actions.split(', ') %}
                <li>{{ action }}</li>
                {% endfor %}
            </ul>
            {% endif %}
            {% if tools_required %}
            <p class="detail-item"><span class="label">Tools Required:</span></p>
            <ul>
                {% for tool in tools_required.split(', ') %}
                <li>{{ tool }}</li>
                {% endfor %}
            </ul>
            {% endif %}
            {% if safety_notes %}
            <p class="detail-item"><span class="label">Safety Notes:</span></p>
            <ul>
                {% for note in safety_notes.split(', ') %}
                <li style="color: #d32f2f;">{{ note }}</li>
                {% endfor %}
            </ul>
            {% endif %}
            {% if sla_hours %}<p class="detail-item"><span class="label">SLA (Hours):</span> {{ sla_hours }}</p>{% endif %}
            <p class="detail-item"><span class="label">Current Status:</span> <span class="status">{{ status | capitalize }}</span></p>
        </div>
        {% endif %}
    </div>
</body>
</html>


